<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="https://ui-themez.smartinnovates.net/items/swoo_html/home_tech/assets/img/fav.png" />
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/assets//CSS//Layout//header.css">
    <link rel="stylesheet" href="~/assets//CSS//Layout//footer.css">
</head>
<style>
    body {
        background-color: #f8f8f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>
<body>
    <header>
        <!-- Top bar -->
        <div class="bg-light-custom py-2">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        <span class="fw-medium small">Hotline 24/7</span>
                        <span class="fw-bold small">(025) 3886 25 16</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main navigation -->
        <div class="py-3">
            <div class="container">
                <div class="row align-items-center gy-3 ">
                    <!-- Logo -->
                    <div class="col-12 col-md-2 d-flex justify-content-center justify-content-md-start">
                        <div class="d-flex align-items-center">
                            <img src="https://ui-themez.smartinnovates.net/items/swoo_html/home_tech/assets/img/logo.png" />
                        </div>
                    </div>

                    <!-- Navigation menu -->
                    <div class="col-12 col-md-6">
                        <nav>
                            <ul class="nav justify-content-center">
                                <li class="nav-item mx-2">
                                    <a href="#" class="nav-link text-dark fw-medium d-flex align-items-center">
                                        TRANG CHỦ
                                        <i class="fas fa-chevron-down ms-1 small"></i>
                                    </a>
                                </li>
                                <li class="nav-item mx-2">
                                    <a href="#" class="nav-link text-dark fw-medium d-flex align-items-center">
                                        DANH MỤC
                                        <i class="fas fa-chevron-down ms-1 small"></i>
                                    </a>
                                </li>
                                <li class="nav-item mx-2">
                                    <a href="#" class="nav-link text-dark fw-medium d-flex align-items-center">
                                        LIÊN KẾT TRANG
                                        <i class="fas fa-chevron-down ms-1 small"></i>
                                    </a>
                                </li>
                                <li class="nav-item mx-2">
                                    <a href="#" class="nav-link text-dark fw-medium">LIÊN HỆ</a>
                                </li>
                            </ul>
                        </nav>
                    </div>

                    <!-- User actions -->
                    <div class="col-12 col-md-4">
                        <div class="d-flex justify-content-center justify-content-md-end align-items-center gap-3">
                            <!-- User account -->
                            <div class="d-flex align-items-center">
                                <div class="icon-circle bg-light-custom">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="ms-2 d-none d-md-block">
                                    <p class="fs-7 text-gray-custom mb-0">CHÀO MỪNG ĐẾN VỚI SWOO </p>
                                    <p class="fs-7 fw-medium mb-0">ĐĂNG NHẬP</p>
                                </div>
                            </div>

                            <!-- Wishlist -->
                            <div>
                                <div class="icon-circle bg-light-custom">
                                    <i class="fas fa-heart"></i>
                                </div>
                            </div>

                            <!-- Cart -->
                            <div class="d-flex align-items-center position-relative">
                                <div class="icon-circle bg-light-custom">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <div class="ms-2 d-none d-md-block">
                                    <p class="fs-7 text-gray-custom mb-0">GIỎ HÀNG</p>
                                    <p class="fs-7 fw-bold mb-0">$1,689.00</p>
                                </div>
                                <span class="cart-badge bg-green-custom text-white">5</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-container">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Search Bar Section -->
                    <div class="col-lg-5">
                        <div class="search-container">
                          
                            <input type="text" class="search-input" placeholder="Nhập tên điện thoại, máy tính, phụ kiện... cần tìm">
                            <button class="search-button">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- Promotional Messages Section -->
                    <div class="col-lg-7">
                        <div class="row promo-container">
                            <div class="col-md-4 ">
                                <div class="promo-text"><i class="fa-solid fa-truck-fast"></i>  Miễn phí vận chuyển </div>
                            </div>
                            <div class="col-md-4">
                                <div class="promo-text"><i class="fa-solid fa-rotate-right"></i>  Hoàn tiền trong 30 ngày</div>
                            </div>
                            <div class="col-md-4">
                                <div class="promo-text"><i class="fa-solid fa-shield"></i>  100% thanh toán an toàn</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </header>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

