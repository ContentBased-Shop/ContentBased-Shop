@model List<Shop.Models.ProductRecentViewModel>

@if (Model != null && Model.Any())
{
    <div class="container p-4 bg-white mb-2 rounded-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="mb-0">Sản phẩm bạn xem gần đây</h5>
        </div>

        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <a href="@Url.Action("AddRecentProduct", "Product", new { maHangHoa = product.MaHangHoa, maBienThe = product.MaBienThe })" class="text-decoration-none text-dark">
                        <div class="d-flex gap-3 align-items-start bg-white rounded-3 p-2 position-relative shadow-sm h-100">
                            <!-- Hình ảnh -->
                            <div class="position-relative" style="min-width: 80px;">
                                <img src="@Url.Content("~/assets/Image/Product/" + product.HinhAnh)" alt="@product.TenHangHoa"
                                     width="80" height="80"
                                     class="img-fluid object-fit-contain rounded ">
                            </div>

                            <!-- Thông tin sản phẩm -->
                            <div class="flex-grow-1">
                                <h6 class="mb-1 text-truncate" style="max-width: 150px;">@product.TenHangHoa</h6>

                                <p class="mb-1 text-muted small" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; width: 175px;">
                                    <strong >@product.MoTa</strong>
                                </p>

                                <!-- Giá -->
                                <div class="mb-1">
                                    <span class="fw-bold text-danger">@product.GiaKhuyenMai.ToString("N0") ₫</span><br />
                                    @if (product.GiaBan > product.GiaKhuyenMai)
                                    {
                                        <small class="text-muted text-decoration-line-through">@product.GiaBan.ToString("N0") ₫</small>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

            }
        </div>
    </div>
}
else
{
    <div class="container p-4 bg-white my-2 rounded-3">
        <div class="text-center text-muted py-4">
            <i class="bi bi-clock-history fs-1 mb-3"></i>
            <h5>Danh sách trống</h5>
            <p>Bạn chưa xem sản phẩm nào gần đây.</p>
        </div>
    </div>
}
