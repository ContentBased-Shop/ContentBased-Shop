@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="min-vh-100">
    <!-- Hero Section -->
    <section class="bg-tech py-5 position-relative overflow-hidden">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 z-1">
                    <h1 class="display-4 fw-bold text-black mb-3">
                        Best experience<br /><span class="fw-normal">always wins</span>
                    </h1>
                    <p class="text-secondary mt-3">
                        #1 Online Marketplace for Electronic & Technology<br />in Mahanttan, CA
                    </p>
                </div>
                <div class="col-md-6 mt-4 mt-md-0 text-center">
                    <img src="https://ui-themez.smartinnovates.net/items/swoo_html/inner_pages/assets/img/about/ban1.png" alt="Electronic devices" class="img-fluid" />
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-5 bg-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h2 class="h4 fw-bold">
                        OUR PURPOSE IS TO <span class="text-success">ENRICH</span><br />
                        <span class="text-success">AND ENHANCE LIVES</span> THROUGH<br />TECHNOLOGY
                    </h2>
                </div>
                <div class="col-md-8">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <h3 class="display-6 fw-bold">$12.5M</h3>
                            <p class="text-muted small">TOTAL REVENUE FROM<br />2001 - 2023</p>
                        </div>
                        <div class="col-md-4">
