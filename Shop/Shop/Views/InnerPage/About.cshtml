<script>
    const cards = document.querySelectorAll(".review-card");
    let currentIndex = 0;

    function showCard(index) {
        cards.forEach((card, i) => {
            card.classList.add("d-none");
        });
        cards[index].classList.remove("d-none");
    }

    document.querySelector(".bi-chevron-left").parentElement.addEventListener("click", () => {
        currentIndex = (currentIndex - 1 + cards.length) % cards.length;
        showCard(currentIndex);
    });

    document.querySelector(".bi-chevron-right").parentElement.addEventListener("click", () => {
        currentIndex = (currentIndex + 1) % cards.length;
        showCard(currentIndex);
    });

    // Hiển thị thẻ đầu tiên khi tải trang
    showCard(currentIndex);
</script>
