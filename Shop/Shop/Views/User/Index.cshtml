                            icon: 'info',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        let selectedRating = 0; // Biến lưu số sao đã chọn

                        // Hiển thị modal đánh giá
                        Swal.fire({
                            title: 'Đánh giá sản phẩm',
                            html: `
                                <div class="text-start">
                                    <div class="mb-3">
                                        <label class="form-label">Sản phẩm: ${response.data[0].tenHangHoa}</label>
