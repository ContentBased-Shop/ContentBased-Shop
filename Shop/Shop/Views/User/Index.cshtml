                            preConfirm: () => {
                                if (selectedRating === 0) {
                                    Swal.showValidationMessage('Vui lòng chọn số sao đánh giá');
                                    return false;
                                }
                                return {
                                    rating: selectedRating,
                                    binhLuan: document.getElementById('binhLuan').value
                                };
