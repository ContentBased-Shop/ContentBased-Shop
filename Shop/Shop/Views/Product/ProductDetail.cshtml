                <img src="https://ui-themez.smartinnovates.net/items/swoo_html/inner_pages/assets/img/products/prod27.png" alt="Review image 2" class="rounded" width="80" height="80">
            </div>
        </div>

        <!-- Review 2 -->
        <div class="bg-light p-4 rounded">
            <div class="d-flex justify-content-between mb-3">
                <div class="d-flex gap-3">
                    <img src="https://ui-themez.smartinnovates.net/items/swoo_html/inner_pages/assets/img/user.png" alt="User" class="rounded-circle" width="40" height="40">
                    <div>
                        <div class="fw-medium">Ronald Richards</div>
                        <div class="d-flex">
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
