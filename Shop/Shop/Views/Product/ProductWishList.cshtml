<script>
    // Set thời gian đích đến
    const countdownDate = new Date("2025-05-30T00:00:00").getTime();

    const daysEl = document.querySelectorAll('.text-center')[0].querySelector('.h4');
    const hoursEl = document.querySelectorAll('.text-center')[1].querySelector('.h4');
    const minutesEl = document.querySelectorAll('.text-center')[2].querySelector('.h4');
    const secondsEl = document.querySelectorAll('.text-center')[3].querySelector('.h4');

    const countdown = setInterval(function () {
        const now = new Date().getTime();
        const distance = countdownDate - now;

        if (distance < 0) {
            clearInterval(countdown);
            daysEl.textContent = "0";
            hoursEl.textContent = "0";
            minutesEl.textContent = "0";
            secondsEl.textContent = "0";
            return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        daysEl.textContent = days;
        hoursEl.textContent = hours;
        minutesEl.textContent = minutes;
        secondsEl.textContent = seconds;
    }, 1000);
</script>
