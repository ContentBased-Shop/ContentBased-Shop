@{
    ViewBag.Title = "Thanh toán thất bại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 my-5 bg-white rounded shadow">
    <div class="text-center py-5">
        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
        <h1 class="mt-4 mb-3">Thanh toán thất bại</h1>
        <p class="text-muted">@(ViewBag.Error ?? "Đã có lỗi xảy ra trong quá trình thanh toán.")</p>
        <div class="mt-4">
            <a href="@Url.Action("PreCart", "InnerPage")" class="btn btn-success">Quay lại giỏ hàng</a>
            <a href="/" class="btn btn-outline-secondary ms-2">Về trang chủ</a>
        </div>
    </div>
</div> 